@model Conta

@{ 
    var vId = 0;
    var vNome = "";
    var vSaldo = 0;
    try
    {
        vId = int.Parse(ViewBag.Registro.Id.ToString());
        vNome = ViewBag.Registro.Nome.ToString();
        vSaldo = Convert.ToDouble(ViewBag.Registro.Saldo.ToString());
    }
    catch
    {


    }
}
<h2>Criar Conta</h2>

<form asp-controller="Conta" asp-action="CriarConta">
    <input type="hidden" asp-for="Id" value="@vId" />

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" value="@vNome" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Saldo">Saldo</label>
        <input type="text" class="form-control" asp-for="Saldo" value="@vSaldo"/>
        <span asp-validation-for="Saldo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>